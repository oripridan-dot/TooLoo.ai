{
  "name": "@tooloo/engine",
  "version": "2.0.0-alpha.0",
  "description": "The Orchestration Engine - Routes requests, executes skills, manages context",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./tools": {
      "types": "./dist/tools/index.d.ts",
      "import": "./dist/tools/index.js"
    },
    "./tools/fs": {
      "types": "./dist/tools/fs.d.ts",
      "import": "./dist/tools/fs.js"
    }
  },
  "scripts": {
    "build": "tsc --composite false",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@tooloo/core": "workspace:*",
    "@tooloo/skills": "workspace:*",
    "@tooloo/providers": "workspace:*",
    "@tooloo/memory": "workspace:*",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT"
}
