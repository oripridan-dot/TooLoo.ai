{
  "name": "@tooloo/evals",
  "version": "2.0.0-alpha.0",
  "description": "Cognitive Unit Testing - Golden Dataset evaluation harness",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "eval": "tsx src/run.ts"
  },
  "dependencies": {
    "@tooloo/core": "workspace:*",
    "@tooloo/providers": "workspace:*",
    "@tooloo/skills": "workspace:*",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "tsx": "^4.20.3",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist",
    "golden/**/*.yaml"
  ],
  "keywords": [
    "ai",
    "evaluation",
    "testing",
    "llm",
    "cognitive"
  ]
}
