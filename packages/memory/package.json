{
  "name": "@tooloo/memory",
  "version": "2.0.0-alpha.0",
  "description": "Consolidated memory systems - short-term, long-term, episodic, semantic cache",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./semantic-cache": {
      "types": "./dist/semantic-cache.d.ts",
      "import": "./dist/semantic-cache.js"
    },
    "./context": {
      "types": "./dist/context-manager.d.ts",
      "import": "./dist/context-manager.js"
    },
    "./event-store": {
      "types": "./dist/event-store.d.ts",
      "import": "./dist/event-store.js"
    }
  },
  "scripts": {
    "build": "tsc --noEmit false",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@tooloo/core": "workspace:*",
    "better-sqlite3": "^11.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "tooloo",
    "ai",
    "memory",
    "vector-store",
    "cache"
  ],
  "author": "Ori Pridan",
  "license": "MIT"
}
