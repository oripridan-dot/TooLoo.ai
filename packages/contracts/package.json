{
  "name": "@tooloo/contracts",
  "version": "2.0.0-alpha.0",
  "description": "Zod schemas and API contracts for TooLoo.ai",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./api": {
      "types": "./dist/api/index.d.ts",
      "import": "./dist/api/index.js"
    },
    "./validation": {
      "types": "./dist/validation.d.ts",
      "import": "./dist/validation.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "generate": "tsx scripts/generate-contracts.ts"
  },
  "dependencies": {
    "@tooloo/core": "workspace:*",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "tsx": "^4.19.4",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "tooloo",
    "ai",
    "contracts",
    "zod",
    "validation"
  ],
  "author": "Ori Pridan",
  "license": "MIT"
}
