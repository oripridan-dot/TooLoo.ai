# Environment Configuration for TooLoo.ai

# AI Provider API Keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
HF_API_KEY=your_huggingface_api_key_here

# Model Configurations
DEEPSEEK_MODEL=deepseek-chat
ANTHROPIC_MODEL=claude-3-5-haiku-20241022
OPENAI_MODEL=gpt-4o-mini
GEMINI_MODEL=gemini-1.5-pro
OLLAMA_MODEL=llama3.2:latest
LOCALAI_MODEL=gpt-4

# Server Ports
WEB_PORT=3000
TRAINING_PORT=3001
META_PORT=3002
BUDGET_PORT=3003
COACH_PORT=3004
CUP_PORT=3005
PRODUCT_PORT=3006
SEGMENTATION_PORT=3007
REPORTS_PORT=3008
CAPABILITIES_PORT=3009
ACTIVITY_MONITOR_PORT=3050
ORCH_CTRL_PORT=3123

# System Configuration
SCREENSHOT_INTERVAL_MS=3000
MAX_FRAMES=50
ENABLE_OCR=true
ENABLE_TAGGING=true
AUTOFOCUS_DELTA=20
STARTUP_CHAT_PRIORITY=true
FAST_LANE_ON=true
DEFAULT_BRANCH_PREFIX=feature
MAX_BRANCH_NAME_LENGTH=50

# Database Configuration
DATABASE_URL=sqlite:./data/tooloo.db

# Security
JWT_SECRET=your_jwt_secret_here
BASIC_AUTH_USER=admin
BASIC_AUTH_PASS=secure_password
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development
ENABLE_DEBUG=true
ENABLE_HOT_RELOAD=true
NODE_ENV=development