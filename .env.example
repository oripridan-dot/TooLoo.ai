# =============================================================================
# TooLoo.ai V2 - Environment Configuration
# Copy to .env.v2 and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
NODE_ENV=production
API_PORT=4001
WEB_PORT=80

# -----------------------------------------------------------------------------
# AI Provider API Keys
# At least one provider key is required
# -----------------------------------------------------------------------------

# Anthropic (Claude)
ANTHROPIC_API_KEY=

# OpenAI (GPT-4)
OPENAI_API_KEY=

# DeepSeek
DEEPSEEK_API_KEY=

# Google (Gemini)
GOOGLE_API_KEY=

# Zhipu AI
ZHIPU_API_KEY=

# -----------------------------------------------------------------------------
# Ollama (Local Models) - Optional
# -----------------------------------------------------------------------------
OLLAMA_HOST=http://ollama:11434
OLLAMA_PORT=11434

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# IMPORTANT: Change this in production!
JWT_SECRET=change-this-to-a-secure-random-string-in-production

# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:80

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:4001/api/v2
VITE_SOCKET_URL=http://localhost:4001
VITE_USE_V2=true

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_PATH=./data/tooloo.db

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_FREE=20
RATE_LIMIT_PRO=100
RATE_LIMIT_ENTERPRISE=1000
