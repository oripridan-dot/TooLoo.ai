# ============================================
# TooLoo.ai Environment Configuration
# ============================================
# Last Updated: November 27, 2025
# Architecture: Synapsys V2.2 (Unified Monolith on Port 4000)

# --------------------------------------------
# Server Configuration
# --------------------------------------------
PORT=4000                    # Primary API server (Nexus)
NODE_ENV=development         # development | production | test

# --------------------------------------------
# AI Provider API Keys
# --------------------------------------------
# DeepSeek: Fast, cost-effective reasoning
DEEPSEEK_API_KEY=your_deepseek_key

# Anthropic: Claude models (best for code & reasoning)
ANTHROPIC_API_KEY=your_anthropic_key

# OpenAI: GPT-4 & DALL-E 3 (best for creative & visual)
OPENAI_API_KEY=your_openai_key

# Google: Gemini models (best for multi-modal & long context)
GEMINI_API_KEY=your_gemini_key

# Hugging Face: Open-source models
HF_API_KEY=your_hf_key

# Grok: X.AI's reasoning model
GROK_API_KEY=your_grok_key

# --------------------------------------------
# Model Configurations
# --------------------------------------------
# Default models for each provider
DEEPSEEK_MODEL=deepseek-chat
ANTHROPIC_MODEL=claude-3-5-haiku-20241022
OPENAI_MODEL=gpt-4o-mini
GEMINI_MODEL=gemini-3-pro-preview

LOCALAI_MODEL=gpt-4

# --------------------------------------------
# System Features
# --------------------------------------------
# Screenshot capture interval (milliseconds)
SCREENSHOT_INTERVAL_MS=3000

# Maximum frames to capture
MAX_FRAMES=50

# Enable OCR for screenshot text extraction
ENABLE_OCR=true

# Enable automatic tagging of content
ENABLE_TAGGING=true

# Autofocus threshold (for UI attention tracking)
AUTOFOCUS_DELTA=20

# Prioritize chat on startup
STARTUP_CHAT_PRIORITY=true

# Enable fast-lane processing for critical tasks
FAST_LANE_ON=true

# --------------------------------------------
# Git Configuration
# --------------------------------------------
# Default branch prefix for new features
DEFAULT_BRANCH_PREFIX=feature

# Maximum length for branch names
MAX_BRANCH_NAME_LENGTH=50

# --------------------------------------------
# Database Configuration
# --------------------------------------------
# SQLite database location
DATABASE_URL=sqlite:./data/tooloo.db

