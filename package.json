{
  "name": "tooloo.ai",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently -n API,WEB -c green,cyan \"npm run start:api\" \"npm run start:web\"",
    "start:api": "node simple-api-server.js",
    "start:web": "npm --prefix web-app run dev",
    "build": "npm --prefix web-app run build",
    "lint": "npm --prefix web-app run lint",
    "preview": "npm --prefix web-app run preview",
    "test": "npm --prefix web-app run test",
    "test:unit": "npm --prefix web-app run test"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "socket.io": "^4.8.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "typescript": "^5.0.2"
  }
}
