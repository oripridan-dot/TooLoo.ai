{
  "name": "tooloo-ai",
  "version": "2.0.0",
  "description": "TooLoo.ai multi-service personal AI development platform",
  "type": "module",
  "private": true,
  "scripts": {
    "info": "echo 'ðŸ“‹ TooLoo.ai multi-service workspace'",
    "build": "echo 'âœ… Static HTML app - no build needed. Run: npm run dev'",
    "dev": "bash launch-tooloo.sh",
    "start": "node servers/orchestrator.js",
    "start:auto": "bash start-tooloo.sh",
    "start:web": "node servers/web-server.js",
    "start:training": "node servers/training-server.js",
    "start:meta": "node servers/meta-server.js",
    "start:budget": "node servers/budget-server.js",
    "start:coach": "node servers/coach-server.js",
    "start:cup": "node servers/cup-server.js",
    "start:product": "node servers/product-development-server.js",
    "start:segmentation": "node servers/segmentation-server.js",
    "start:reports": "node servers/reports-server.js",
    "start:capabilities": "node servers/capabilities-server.js",
    "start:bridge": "node servers/capability-workflow-bridge.js",
    "start:sources": "node servers/sources-server.js",
    "start:simple": "node simple-api-server.js",
    "stop:all": "bash -lc 'pkill -f \"servers/(web|training|meta|budget|coach|cup|product-development|segmentation|reports|capabilities|sources)-server.js\" || true'",
    "clean": "npm-run-all clean:process hygiene:force",
    "clean:process": "bash -lc 'pkill -f \"node servers/\" || true'",
    "branch:status": "node scripts/branch-status.js",
    "design:guiding-star": "node scripts/design-guiding-star.js",
    "speak": "node scripts/speak.js",
    "speak:direct": "node scripts/speak-direct.js",
    "speak:selection": "node scripts/speak-selection.js",
    "voice:settings": "node scripts/voice-picker.js",
    "benchmark": "node scripts/tooloo.js benchmark",
    "benchmark:basic": "node scripts/tooloo.js benchmark --suite basic-segmentation",
    "benchmark:learn": "node scripts/segmentation-auto-learner.js",
    "auto-teach": "node scripts/auto-teach.js",
    "generate:fixtures": "node scripts/generate-transcript-fixtures.js",
    "test": "node scripts/qa-suite.js --report",
    "test:all": "node scripts/qa-suite.js --report --coverage",
    "test:core": "vitest run tests/unit/system.test.js",
    "test:unit": "vitest run --config vitest.config.js --dir tests/unit || true",
    "test:integration": "vitest run --config vitest.config.js --dir tests/api",
    "test:watch": "vitest --config vitest.config.js",
    "test:parser": "node datasets/benchmarks/scripts/parse-harness.js",
    "qa:suite": "node scripts/qa-suite.js --report --coverage --verbose",
    "qa:report": "node scripts/qa-suite.js --report && cat qa-coverage-report.json | jq .",
    "qa:gaps": "node scripts/qa-suite.js --report --coverage | grep -A 20 'Gaps to Fill'",
    "qa:health": "node scripts/qa-suite.js --coverage",
    "qa:web": "node tests/integration/web-server.integration.test.js",
    "qa:training": "node tests/integration/training-server.integration.test.js",
    "qa:budget": "node tests/integration/budget-server.integration.test.js",
    "qa:meta": "node tests/integration/meta-server.integration.test.js",
    "qa:coach": "node tests/integration/coach-server.integration.test.js",
    "qa:e2e": "node tests/e2e/complete-workflows.test.js",
    "qa:cup": "node tests/integration/cup-server.integration.test.js",
    "qa:product": "node tests/integration/product-dev-server.integration.test.js",
    "test:segmenter": "node datasets/benchmarks/scripts/segmenter-harness.js",
    "test:patterns": "node datasets/benchmarks/scripts/pattern-extraction-harness.js",
    "test:traits": "node datasets/benchmarks/scripts/trait-synthesis-harness.js",
    "health": "node scripts/tooloo.js health",
    "docs": "node scripts/tooloo.js docs",
    "lint": "eslint .",
    "format": "prettier --write .",
    "local:start": "bash scripts/setup-local-macos.sh",
    "local:stop": "bash scripts/local-stop.sh",
    "hygiene": "bash scripts/repo-hygiene.sh",
    "hygiene:force": "bash scripts/repo-hygiene.sh --yes"
  },
  "keywords": [
    "ai",
    "multi-service",
    "personal-assistant",
    "segmentation",
    "orchestration"
  ],
  "author": "TooLoo.ai Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "node-fetch": "^3.3.2",
    "playwright": "^1.56.0",
    "socket.io": "^4.7.4",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "pdfkit": "^0.15.0",
    "prettier": "^3.0.0",
    "supertest": "^7.1.4",
    "vitest": "^3.2.4"
  }
}
