{
  "name": "tooloo-skills-os",
  "version": "1.0.0",
  "description": "TooLoo.ai Skills OS - The Universal Skill Execution Platform",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.0.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "boot": "tsx src/kernel/boot.ts",
    "boot:dev": "tsx watch src/kernel/boot.ts",
    "dev": "./scripts/skill-os-start.sh",
    "start": "./scripts/skill-os-start.sh",
    "stop": "./scripts/skill-os-stop.sh",
    "dev:api": "cd apps/api && NODE_OPTIONS='--max-old-space-size=512' pnpm exec tsx watch src/index.ts",
    "dev:web": "cd apps/web && NODE_OPTIONS='--max-old-space-size=512' pnpm exec vite --host 0.0.0.0 --port 5173",
    "build": "pnpm run build:packages && pnpm run build:apps",
    "build:packages": "turbo run build --filter='@tooloo/*'",
    "build:apps": "turbo run build --filter='apps/*'",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf node_modules packages/*/node_modules apps/*/node_modules .turbo packages/*/dist apps/*/dist",
    "version:bump": "./scripts/version-bump.sh",
    "version:major": "./scripts/version-bump.sh major",
    "version:minor": "./scripts/version-bump.sh minor",
    "version:patch": "./scripts/version-bump.sh patch",
    "skills:list": "tsx scripts/skills-list.ts",
    "skills:validate": "tsx scripts/validate-skills.ts",
    "health": "curl -s http://localhost:4001/api/v2/health | jq"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^11.0.0",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.0",
    "turbo": "^2.6.3",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@tooloo/memory": "workspace:*",
    "@tooloo/skills": "workspace:*",
    "better-sqlite3": "^11.7.0",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "fs-extra": "^11.3.2",
    "node-fetch": "^3.3.2",
    "socket.io": "^4.7.5",
    "uuid": "^13.0.0",
    "zod": "^3.24.1"
  }
}
