{
  "watch": [
    "servers",
    "engine",
    "lib",
    "api",
    "services",
    "scripts"
  ],
  "ignore": [
    "node_modules",
    "logs",
    "cache",
    "data",
    "*.log",
    "*.pid",
    "*.tmp"
  ],
  "ext": "js,json",
  "delay": 1000,
  "env": {
    "NODE_ENV": "development"
  },
  "verbose": false,
  "legacyWatch": false,
  "exitOnChange": false,
  "restartable": "rs",
  "events": {
    "restart": "echo 'ðŸ”„ Changes detected, services will reload...'",
    "crash": "echo 'ðŸ’¥ Service crashed, will attempt restart'",
    "quit": "echo 'ðŸ›‘ Shutting down...'"
  }
}
