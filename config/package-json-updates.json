    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "c8": "^9.0.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  
  "instructions": [
    "1. Merge these scripts into your existing package.json",
